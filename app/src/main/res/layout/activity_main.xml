<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity"
            android:background="#62C9E8">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Number of step: "
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textSize="20sp"
                    android:background="#00FF00"
                    android:textColor="#000000"
                    android:textAlignment="viewEnd"/>

                <TextView
                    android:id="@+id/stepCountStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:background="#FF0000"/>


                <Button
                    android:id="@+id/stepCountStartStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Start Stop"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:background="#FF0000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ipAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ip address"
                    android:text="10.6.53.6"
                    android:background="#00FF00"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/ipPort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="port"
                    android:text="8888"
                    android:background="#FF0000"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/textToSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="text to send"
                android:background="#FFFF00"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/sendUDP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="send UDP test"/>

            <Button
                android:id="@+id/startReceiveUDP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="receive UDP test"/>
            <TextView
                android:id="@+id/recevedMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/perm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZEZWOLENIA"
                android:background="#FFFFFF00"/>

            <CheckBox
                android:id="@+id/wszystkie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Wszytkie"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG1"
                android:background="#00FF00"/>

            <TextView
                android:id="@+id/log1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00FF00"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG2:"
                android:background="#00FFF0"/>

            <TextView
                android:id="@+id/log2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00FFF0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG3:"
                android:background="#00FFFF"/>
            <TextView
                android:id="@+id/log3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#00FFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG4:"
                android:background="#0FFFFF"/>
            <TextView
                android:id="@+id/log4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#0FFFFF"/>

            <TextView
                android:id="@+id/log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG"
                android:background="#000000"/>

        </LinearLayout>
    </ScrollView>
</layout>